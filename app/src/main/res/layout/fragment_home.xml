<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dateLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:clickable="true"
        android:focusable="true"
        android:rotation="180"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/buttonLock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonLock"
        app:tint="@color/button_background_state" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:textSize="18dp"
        android:background="@drawable/text_selector"
        app:layout_constraintBottom_toBottomOf="@+id/dateLeft"
        app:layout_constraintEnd_toStartOf="@+id/dateRight"
        app:layout_constraintStart_toEndOf="@+id/dateLeft"
        app:layout_constraintTop_toTopOf="@+id/dateLeft"
        tools:text="2020" />

    <ImageView
        android:id="@+id/dateRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:tint="@color/button_background_state"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/dateLeft"
        app:layout_constraintStart_toEndOf="@+id/dateText"
        app:layout_constraintTop_toTopOf="@+id/dateLeft" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSport"
        style="@style/materialButtonStile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:text="спорт"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonScore"
        style="@style/materialButtonStile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="счет"
        app:layout_constraintEnd_toStartOf="@+id/buttonSport"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLive"
        style="@style/materialButtonStile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="live"
        app:layout_constraintEnd_toStartOf="@+id/buttonScore"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonTourney"
        style="@style/materialButtonStile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="турнир"
        app:layout_constraintEnd_toStartOf="@+id/buttonLive"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonLock"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:focusable="true"

        android:src="@drawable/button_lock"
        app:layout_constraintBottom_toBottomOf="@+id/buttonTourney"
        app:layout_constraintEnd_toStartOf="@+id/buttonTourney"
        app:layout_constraintTop_toTopOf="@+id/buttonTourney" />



    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/homeRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        app:focusOutFront="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLock" />
</androidx.constraintlayout.widget.ConstraintLayout>
        <!--            tools:text="00:00" />-->

        <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/slashTextView1"
            app:layout_constraintTop_toTopOf="@+id/slashTextView1"
            tools:text="00:00" />

        <!--        <TextView-->
        <!--            android:id="@+id/slashTextView"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="@string/text_slash"-->
        <!--            android:textColor="@color/white"-->
        <!--            app:layout_constraintEnd_toStartOf="@+id/duration"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/duration" />-->

        <TextView
            android:id="@+id/slashTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_slash"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/exo_duration"
            app:layout_constraintTop_toTopOf="@+id/exo_duration" />

        <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/menuPlayer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/menuPlayer"
            tools:text="00:00" />

        <!--        <TextView-->
        <!--            android:id="@+id/duration"-->

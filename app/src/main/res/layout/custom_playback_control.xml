    <com.natife.streaming.custom.PlayerBottomBar
        android:id="@+id/player_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.leanback.widget.BrowseFrameLayout
        android:id="@+id/second_bottom_menu_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:descendantFocusability="afterDescendants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/player_bottom_bar"
        app:layout_constraintStart_toStartOf="@+id/player_bottom_bar"
        app:layout_constraintTop_toBottomOf="@+id/player_bottom_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_bottom_menu"

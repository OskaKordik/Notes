<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/scoreDialog">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.natife.streaming.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_main"/>
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.natife.streaming.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_scoreDialog"
            app:destination="@id/scoreDialog"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_sportDialog"
            app:destination="@id/sportDialog"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/homeFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_liveDialog"
            app:destination="@id/liveDialog"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/homeFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_tournamentDialog"
            app:destination="@id/tournamentDialog"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/homeFragment"/>
    </fragment>


    <fragment
        android:id="@+id/accountFragment"
        android:name="com.natife.streaming.ui.account.AccountFragment"
        android:label="AccountFragment"
        tools:layout="@layout/fragment_account"/>

    <action
        android:id="@+id/action_global_accountFragment"
        app:destination="@id/accountFragment"
        />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:launchSingleTop="true" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:launchSingleTop="true" />
    <dialog
        android:id="@+id/scoreDialog"
        android:name="com.natife.streaming.ui.home.score.ScoreDialog"
        android:label="ScoreDialog"
        tools:layout="@layout/dialog_variant"/>
    <dialog
        android:id="@+id/sportDialog"
        android:name="com.natife.streaming.ui.home.sport.SportDialog"
        android:label="SportDialog"
        tools:layout="@layout/dialog_variant"/>
    <dialog
        android:id="@+id/liveDialog"
        android:name="com.natife.streaming.ui.home.live.LiveDialog"
        android:label="LiveDialog"
        tools:layout="@layout/dialog_variant"/>
    <dialog
        android:id="@+id/tournamentDialog"
        android:name="com.natife.streaming.ui.home.tournament.TournamentDialog"
        android:label="TournamentDialog"
        tools:layout="@layout/dialog_variant">
        <argument
            android:name="thournuments"
            app:argType="com.natife.streaming.data.match.Tournament[]" />
    </dialog>

</navigation>
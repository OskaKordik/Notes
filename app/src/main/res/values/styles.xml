<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="materialButtonStile">
        <item name="backgroundTint">@color/button_background_state</item>
        <item name="android:textColor">@color/button_text_state</item>
    </style>
    <style name="Theme.App.Dialog.FullScreen"
        parent="Theme.MaterialComponents.Dialog">
        <!-- (1)-->
        <item name="android:windowIsFloating">false</item>
        <!-- (2) -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    
    <!-- new -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="ButtonOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/black</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>
    <style name="ButtonOutlinedTransparentButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputLayout</item>
<!--        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.SmallComponent</item>-->
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="PasswordTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputLayout</item>
<!--        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>-->
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="colorError">@color/light_red</item>
    </style>

    <style name="ThemeOverlay.TextInputLayout" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.StreamingTheme.Subtitle1</item>
<!--        <item name="textAppearanceCaption">@style/TextAppearance.StreamingTheme.Caption</item>-->
    </style>
</resources>